generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model JobListing {
  id               String    @id @default(uuid())
  title            String
  companyName      String
  location         String
  salary           String
  type             String
  description      String    @default("Default description")
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  expiresAt        DateTime?
  postedAt         DateTime?
  employer         Employer? @relation("Company Name")
  employee         Employee[] @relation("Employee Name")
}


model Employer {
  id               String    @id @default(uuid())
  name             String    @relation("Company Name")
  username         String
  email            String
  password         String
  yearFounded      Int
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  jobListings      JobListing[]
}


model Employee {
  id               String    @id @default(uuid())
  name             String    @relation("Employee Name")
  username         String
  email            String
  password         String
  Gender           String?
  Age              Int?
  skills           String[]
  experiences      String[]
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  jobListings      JobListing[]
}